<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:id="@+id/sv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/category1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cate_bg_selector"
                android:text="#정치"
                android:textColor="@drawable/tab_color_selector" />

            <Button
                android:id="@+id/category2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cate_bg_selector"
                android:text="#경제"
                android:textColor="@drawable/tab_color_selector" />

            <Button
                android:id="@+id/category3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cate_bg_selector"
                android:text="#사회"
                android:textColor="@drawable/tab_color_selector" />

            <Button
                android:id="@+id/category4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cate_bg_selector"
                android:text="#생활/문화"
                android:textColor="@drawable/tab_color_selector" />

            <Button
                android:id="@+id/category5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cate_bg_selector"
                android:text="#세계"
                android:textColor="@drawable/tab_color_selector" />

            <Button
                android:id="@+id/category6"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cate_bg_selector"
                android:text="#IT/과학"
                android:textColor="@drawable/tab_color_selector" />

            <Button
                android:id="@+id/category7"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cate_bg_selector"
                android:text="#연예"
                android:textColor="@drawable/tab_color_selector" />

            <Button
                android:id="@+id/category8"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cate_bg_selector"
                android:text="#스포츠"
                android:textColor="@drawable/tab_color_selector" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#eae476"
        android:orientation="horizontal">


        <Button
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="추천 뉴스"
            android:gravity="center"
            android:textColor="@drawable/tab_color_selector"
            android:background="@drawable/tab_bg_selector"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tab2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="지역별 뉴스"
            android:gravity="center"
            android:textColor="@drawable/tab_color_selector"
            android:background="@drawable/tab_bg_selector"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tab3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="인기 뉴스"
            android:gravity="center"
            android:textColor="@drawable/tab_color_selector"
            android:background="@drawable/tab_bg_selector"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tab4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="오늘 본 뉴스"
            android:gravity="center"
            android:textColor="@drawable/tab_color_selector"
            android:background="@drawable/tab_bg_selector"
            android:textSize="16sp" />


    </LinearLayout>

    <com.example.kin16.newslistener.customViewPager
        android:id="@+id/vp"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:background="@android:color/white"
        android:backgroundTint="@android:color/white" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/underbar_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="   관심 카테고리 :"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/favorite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:background="@null"
            />

        <Button
            android:id="@+id/btTTS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/underbar_button_bg"
            android:text="읽어줘"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btSTT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/underbar_button_bg"
            android:text="음성검색"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>